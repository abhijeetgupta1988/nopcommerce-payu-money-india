@{
    Layout = "_ConfigurePlugin";
}

@model ConfigurationModel
@using Nop.Plugin.Payments.CCAvenue.Models;

<form asp-controller="PaymentCCAvenue" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="MerchantId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantId" />
                        <span asp-validation-for="MerchantId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="Key" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Key" />
                        <span asp-validation-for="Key"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AccessCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AccessCode" />
                        <span asp-validation-for="AccessCode"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="PayUri" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PayUri" />
                        <span asp-validation-for="PayUri"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="MerchantParam" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantParam" />
                        <span asp-validation-for="MerchantParam"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-9 offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
